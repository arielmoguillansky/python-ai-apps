MENU = {
    "espresso": {
        "ingredients": {
            "water": 50,
            "coffee": 18,
        },
        "cost": 1.5,
    },
    "latte": {
        "ingredients": {
            "water": 200,
            "milk": 150,
            "coffee": 24,
        },
        "cost": 2.5,
    },
    "cappuccino": {
        "ingredients": {
            "water": 250,
            "milk": 100,
            "coffee": 24,
        },
        "cost": 3.0,
    }
}

resources = {
    "water": 3000,
    "milk": 2000,
    "coffee": 1,
    "money": 0
}

COMMANDS = ["espresso", "latte", "cappuccino", "report", "off", "reset"]

def reset_resources(resources_original):
    print("Resetting values.")
    return resources_original.copy()

def turn_off():
    print("Turning machine off. Goodbye.")

def check_commands(command):
    return command in COMMANDS

def print_report(resources_session):
    for (item, value) in resources_session.items():
        if item == "money":
            print(f"{item.capitalize()}: ${value}")
        elif item == "coffee":
            print(f"{item.capitalize()}: {value}g")
        else:
            print(f"{item.capitalize()}: {value}ml")

def check_out_of_stock(product, stock):
    return [ingredient for ingredient in product if stock[ingredient] < product[ingredient]]

def calculate_total(quarters, dimes, nickles, pennies):
    return quarters * 0.25 + dimes * 0.1 + nickles * 0.05 + pennies * 0.01

def calculate_change(total, cost):
    return total - cost

def coffee_program_init():
    resources_session = resources.copy()
    while True:
        client_input = input("What would you like? (espresso/latte/cappuccino) ").lower()

        if not check_commands(client_input):
            print("Command not available. Try again.")
            continue

        if client_input == 'off':
            turn_off()
            break

        if client_input == 'reset':
            resources_session = reset_resources(resources)
            continue

        if client_input == 'report':
            print_report(resources_session)
            continue

        missing_ingredient = check_out_of_stock(MENU[client_input]["ingredients"], resources_session)

        if missing_ingredient:
            print(f"Sorry there is not enough {", ".join(missing_ingredient)}.")
            continue

        print("Please insert coins.")
        quarters = int(input("How many quarters?: "))
        dimes = int(input("How many dimes?: "))
        nickles = int(input("How many nickles?: "))
        pennies = int(input("How many pennies?: "))
        
        user_total = calculate_total(quarters, dimes, nickles, pennies)
        change = calculate_change(user_total, MENU[client_input]["cost"])

        if change < 0:
            print(f"Sorry that's not enough money. Money refunded.")
            continue

        if change > 0:
            print(f"Here is ${change} in change")

        print(f"Here is your {client_input}. Enjoy!")
        
        resources_session["money"] += MENU[client_input]["cost"]
        
        for ingredient in MENU[client_input]["ingredients"]:
            resources_session[ingredient] -= MENU[client_input]["ingredients"][ingredient]

        print(resources, resources_session)
        continue



coffee_program_init()